        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/VGL2"
        app:layout_constraintStart_toStartOf="@+id/VGL4"
        app:layout_constraintTop_toTopOf="@+id/horGL2"
        app:srcCompat="@drawable/blood_drop" />

    <TextView
        android:id="@+id/diabetesTestTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Diabetes Test"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/VGL2"
        app:layout_constraintStart_toStartOf="@+id/VGL4"
        app:layout_constraintTop_toBottomOf="@+id/diabetesTestImgV" />

    <ImageView
        android:id="@+id/depressionImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
