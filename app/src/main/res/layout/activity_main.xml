        android:alpha="1"
        android:background="@color/trans"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/VGL4"
        app:layout_constraintStart_toStartOf="@+id/VGL1"
        app:layout_constraintTop_toTopOf="@+id/barHG5"
        app:srcCompat="@drawable/ic_diet" />


    <TextView
        android:id="@+id/medDietScoreTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="MedDietScore Test"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/VGL4"
        app:layout_constraintStart_toStartOf="@+id/VGL1"
        app:layout_constraintTop_toBottomOf="@+id/dietImgV" />


    <ImageView
        android:id="@+id/PainImgV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:background="@color/trans"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/VGL2"
        app:layout_constraintStart_toStartOf="@+id/VGL4"
        app:layout_constraintTop_toTopOf="@+id/barHG5"
        app:srcCompat="@drawable/ic_pain__2_" />

    <TextView
        android:id="@+id/painTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pain Test"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/VGL2"
        app:layout_constraintStart_toStartOf="@+id/VGL4"
        app:layout_constraintTop_toBottomOf="@+id/PainImgV" />

